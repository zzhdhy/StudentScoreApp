<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?><?import javafx.scene.control.Button?><?import javafx.scene.control.Label?><?import javafx.scene.control.TextField?><?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.zzh.studentscoreapp.controller.ScoreController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20;">

    <TextField fx:id="inputField" promptText="输入学号或姓名"/>
    <Button fx:id="searchButton" text="查询" GridPane.columnIndex="1"/>

    <Label text="语文成绩：" GridPane.rowIndex="1"/>
    <Label fx:id="chineseScore" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="数学成绩：" GridPane.rowIndex="2"/>
    <Label fx:id="mathScore" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="外语成绩：" GridPane.rowIndex="3"/>
    <Label fx:id="englishScore" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="平均成绩：" GridPane.rowIndex="4"/>
    <Label fx:id="averageScore" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label fx:id="errorMessage" GridPane.rowIndex="5" style="-fx-text-fill: red;" GridPane.columnSpan="2"/>

</GridPane>